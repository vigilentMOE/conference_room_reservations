{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "checkJs": true,
      "jsx": "preserve",
      "jsxFactory": "h",
      "jsxFragmentFactory": "Fragment",
      "allowJs": true,
      "strict": false,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "frontend/src/*",
          "backend/*"
        ]
      },
      "lib": [
        "DOM",
        "DOM.Iterable", 
        "ESNext"
      ]
    },
    "include": [
      "frontend/src/**/*",
      "backend/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }